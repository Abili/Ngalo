<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <ImageView
                android:id="@+id/bikeImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/bike_image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_ph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/textViewsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/ngalo_green"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/textBikeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/bike_name"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/textViewPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="@string/bike_price"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/detailsDesc"
                    android:padding="10dp"
                    android:background="@color/ngalo_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/description"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/textViewDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/details"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

    </LinearLayout>

</layout>