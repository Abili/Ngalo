<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/orders_tag"
                android:padding="10dp"
                android:text="ORDERS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ngalo_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/users_orders_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/users_orders_item" />

            <TextView
                android:id="@+id/rides_tag"
                android:padding="10dp"
                android:text="RIDES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ngalo_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/users_rides_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/users_orders_item" />

            <TextView
                android:id="@+id/purchases_tag"
                android:padding="10dp"
                android:text="PURCHASES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ngalo_gray" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/users_purchases_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/users_orders_item" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/nodata_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nodata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Empty!"
            android:textColor="@color/ngalo_blue"
            android:textSize="36sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/no_data" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>